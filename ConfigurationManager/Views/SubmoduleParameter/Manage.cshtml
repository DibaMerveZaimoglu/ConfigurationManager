@model ConfigurationManager.Models.SubmoduleParameter

<div class="row">
    <div class="col-md-12">
        <h3 class="m-3">@(Model.Id > 0 ? "Edit Parameter" : "Add Parameter")</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-6 m-3">

        <form method="post">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.SubmoduleId)

            <div class="form-group">
                <label>Parameter Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group">
                <label>Type</label>
                @Html.DropDownListFor(m => m.Type, new SelectList(ViewBag.ParameterValueTypes), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group">
                <label>Value</label>
                @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })

                <div class="bool-radios hidden">
                    <span class="bool-radio">@Html.RadioButton("BoolValue", "True") True</span>
                    <span class="bool-radio">@Html.RadioButton("BoolValue", "False") False</span>
                </div>

                @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger mt-1" })
            </div>

            <button type="submit" class="btn btn-primary">Save</button>

            @Html.ValidationMessage("Error", "", new { @class = "text-danger mt-3" })
        </form>
    </div>
</div>